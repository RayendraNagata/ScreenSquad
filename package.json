{
  "name": "screensquad",
  "version": "1.0.0",
  "description": "Watch videos together in perfect sync with your friends! Real-time video synchronization platform for YouTube, Google Drive, screen sharing and more.",
  "scripts": {
    "dev": "concurrently --names \"BACKEND,FRONTEND\" --prefix-colors \"blue,green\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "cd frontend && npm run build",
    "start": "cd backend && npm start",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "clean": "cd frontend && rm -rf node_modules && cd ../backend && rm -rf node_modules && rm -rf node_modules",
    "setup": "npm run install:all"
  },
  "keywords": ["video", "streaming", "sync", "watch-party", "realtime", "youtube", "screenshare", "react", "nodejs"],
  "author": {
    "name": "RayendraNagata",
    "url": "https://github.com/RayendraNagata"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/RayendraNagata/ScreenSquad.git"
  },
  "bugs": {
    "url": "https://github.com/RayendraNagata/ScreenSquad/issues"
  },
  "homepage": "https://github.com/RayendraNagata/ScreenSquad#readme",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
